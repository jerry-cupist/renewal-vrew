{
  "extends": "@vrew/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": "./",
    "paths": {
      "@apis/*": ["apis/*"],
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@constant/*": ["constant/*"],
      "@context/*": ["context/*"],
      "@features/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@public/*": ["public/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
