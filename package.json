{
  "name": "@vrew/root",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "postinstall": "husky install",
    "prepare": "husky install",
    "lint-staged": {
      "*.{js,jsx,ts,tsx}": [
        "prettier --write",
        "eslint --fix"
      ]
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "@vrew/tsconfig": "*",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.6.1"
  }
}
